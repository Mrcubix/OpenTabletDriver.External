<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

  <SolidColorBrush x:Key="AccentColorBrush" Color="{StaticResource AccentColor}" />
  <SolidColorBrush x:Key="BodyColorBrush" Color="{StaticResource BodyColor}" />
  <SolidColorBrush x:Key="BorderColorBrush" Color="{StaticResource BorderColor}" />
  <SolidColorBrush x:Key="InputBorderColorBrush" Color="{StaticResource InputBorderColor}" />
  <SolidColorBrush x:Key="SideBarColorBrush" Color="{StaticResource SideBarColor}" />
  <SolidColorBrush x:Key="TextColorBrush" Color="{StaticResource TextColor}" />

  <SolidColorBrush x:Key="BindingEditorDialogBorderBrush" Color="{StaticResource BindingEditorDialogBorderColor}" />
  <SolidColorBrush x:Key="BindingEditorDialogBorderBackgroundBrush" Color="{StaticResource BindingEditorDialogBorderBackgroundColor}" />
  <SolidColorBrush x:Key="BindingEditorDialogBodyBrush" Color="{StaticResource BindingEditorDialogBodyColor}" />
  <SolidColorBrush x:Key="BindingEditorDialogForegroundBrush" Color="{StaticResource BindingEditorDialogForegroundColor}" />
  <SolidColorBrush x:Key="BindingEditorButtonBrush" Color="{StaticResource BindingEditorButtonColor}" />
  <SolidColorBrush x:Key="AreaDisplayMappedBrush" Color="{StaticResource AreaDisplayMappedColor}" />

</ResourceDictionary>